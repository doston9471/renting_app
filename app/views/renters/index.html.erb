


<div class="row">
  <div class="col-sm-6">
    <h1>Арендаторы</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_car_renter_path(car_id: params[:car_id]), class: 'btn btn-primary' do %>
    Создать новый арендатор
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Телефон</th>
        <th>Email</th>
        <th>Машина</th>
            
        <th colspan=2></th>
        
      </tr>
    </thead>

    <tbody>
      <% @renters.each do |renter| %>
        <%= content_tag :tr, id: dom_id(renter), class: dom_class(renter) do %>
          <% if renter.status == "paid" %>
            <td style="background-color: green;"><%= renter.first_name %></td>
            <td style="background-color: green;"><%= renter.last_name %></td>
            <td style="background-color: green;"><%= renter.phone %></td>
            <td style="background-color: green;"><%= renter.email %></td>
            <td style="background-color: green;"><%= renter.car.make %>&nbsp;&nbsp;<%= renter.car.model %></td>
          <% else %>
            <td style="background-color: red;"><%= renter.first_name %></td>
            <td style="background-color: red;"><%= renter.last_name %></td>
            <td style="background-color: red;"><%= renter.phone %></td>
            <td style="background-color: red;"><%= renter.email %></td>
            <td style="background-color: red;"><%= renter.car.make %>&nbsp;&nbsp;<%= renter.car.model %></td>
          <% end %>
          <td><%= link_to 'Показать', car_renter_path(@car, renter) %></td>
          <td><%= link_to 'Pay', payment_path(renter.car.id, renter.id) %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
