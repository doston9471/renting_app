<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_tag renter_report_path, method: :get do %>
      <div class="form-group">
        <%= label_tag :from_date, 'Дата от', class: 'col-sm-2 control-label' %>
        <%= date_field_tag :from_date, params[:from_date], class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :to_date, 'Дата до', class: 'col-sm-2 control-label' %>
        <%= date_field_tag :to_date, params[:to_date], class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= submit_tag 'Отправить', class: 'btn btn-success btn-block ' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= link_to 'Скачать отчёт как Excel', renter_report_path(@renter, format: :xlsx), class: 'btn btn-success btn-block' %>
  </div>
  <div class="col-md-3"></div>
</div>
<br>
<br>
<hr>
<div class="table table-striped table-hover">
  <span class="badge" style="color: red; font-size: 17px">
    <strong><%= @renter.first_name %>&nbsp;&nbsp;<%= @renter.last_name %>&nbsp;&nbsp;<%= @renter.phone %></strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <strong>Все расходы : </strong><strong><%= @all_expenses.to_f %>&nbsp;сом</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <strong>Все доходы : </strong><strong><%= @all_incomes %>&nbsp;сом</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <strong>Итого : </strong><strong><%= @all_totals %>&nbsp;сом</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  </span>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

        <th>Расходы</th>
        <th>Доходы</th>
        <th>Дата</th>
        <th>Итого</th>
        <th>Машина</th>
        
      </tr>
    </thead>

    <tbody>
      <% @all_rentings.each do |renting| %>
        <%= content_tag :tr, id: dom_id(renting), class: dom_class(renting) do %>
          
          <td><%= renting.expense %></td>
          <td><%= renting.income %></td>
          <td><%= renting.payment_date %></td>
          <td><%= renting.give_total %></td>
          <td><%= renting.car.make %>&nbsp;<%= renting.car.model %></td>

        <% end %>
      <% end %>
    </tbody>
  </table>
</div>