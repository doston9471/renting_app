<%= form_with(model: car, local: true) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Марка" %>
    <%= form.text_field :make, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Модель" %>
    <%= form.text_field :model, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "ГОС.номер" %>
    <%= form.text_field :plate, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Месячная аренда" %>
    <%= form.text_field :monthly_rent, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Посуточная аренда" %>
    <%= form.text_field :daily_rent, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if car.persisted? %>
      <div class="float-right">
        <%= link_to 'Удалить', car, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if car.persisted? %>
      <%= link_to "Отменить", car, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Отменить", cars_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
